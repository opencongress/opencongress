<h1>Listing Tags</h1>

<table>
  <tr>
  <% for column in Tagg.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for tag in @tags %>
  <tr>
  <% for column in Tagg.content_columns %>
    <td><%=h tag.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => tag %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => tag %></td>
    <td><%= link_to 'Destroy', {:action => 'destroy', :id => tag}, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @tags %>

<br />

<%= link_to 'New tag', :action => 'new' %>

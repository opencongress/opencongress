<% if @bill %>
OpenCongress url:<%= bill_path(@bill) %>
Bill Number:<%= @bill.title_typenumber_only %>
<% unless @bill.title_popular_only.blank? %>Short Title:<%= @bill.title_popular_only %><% end %>
Official Title:<%= @bill.title_official %>
Session:<%= @bill.session %>
Bill Status:<%= @bill.status %>
Sponsor:<%= @bill.sponsor.name %>
Introduced:<%= Time.at(@bill.introduced).strftime("%B %d, %Y") %>
<% unless @bill.committees.empty? %>Committees:<%= @bill.committees.collect { |c| c.proper_name }.join(', ') %><% end %>
<% else %>
Invalid Bill ID
<% end %>
    <dt>&nbsp;</dt><dd><%= check_box('email', 'cc_me' ) %> Send me a copy</dd>
    <dt>&nbsp;</dt><dd><%= show_simple_captcha(:image_style => 'all_black', :distortion => 'high') %>
